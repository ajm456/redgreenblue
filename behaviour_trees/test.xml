<Domain package="main">
	<ActionSet>
		<!-- Orders the current unit to shoot a projectile -->
		<Action name="Shoot"/>
		
		<!-- Orders the current unit to move to a position -->
		<Action name="Move">
			<Parameter name="target" type="COORDINATE"/>
		</Action>
		
		<!-- Computes where the unit should move to next -->
		<Action name="ComputeDestination"/>
	</ActionSet>
	
	<SensorSet>
		<!-- Checks if the player is in line of sight of the
		current unit -->
		<Sensor name="PlayerInLineOfSight" type="BOOLEAN"/>
	</SensorSet>
	
	<GoalSet>
		<!-- Goals declaration -->
	</GoalSet>
	
	<EntitySet>
		<!-- Entities declaration -->
	</EntitySet>
</Domain>